{
    "root": true,
    "env": {
        "es2017": true,
        "browser": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "globals": {
        "axios": "readonly",
	"route": "readonly"
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["warn", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "indent": ["error", 4],
        "no-param-reassign": "off",
        "no-return-assign": "off"
    }
}
